{
  "name": "chiron/twig-renderer",
  "type" : "library",
  "description": "Twig Render for Chiron Framework.",
  "keywords": ["chiron","framework","view","template","twig","phtml","renderer"],
  "license": "MIT",
  "require": {
        "php": "^7.1",
        "twig/twig": "^2.5",
        "psr/container": "^1.0",
        "chiron/template": "^1.3"
  },
  "autoload": {
      "psr-4": {
          "Chiron\\Views\\": "src"
      }
  },
  "autoload-dev" : {
      "psr-4": { "Chiron\\Views\\Tests\\" : "tests/" }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "phpstan/phpstan": "^0.9.2",
    "chiron/container": "^1.0"
  },
  "scripts": {
    "phpunit": "phpunit --colors=always",
    "test-coverage": "phpunit --coverage-clover clover.xml",
    "phpstan": "phpstan analyse src --level=1"
  },
  "extra": {
    "chiron": {
        "providers": ["Chiron\\Views\\Provider\\TwigRendererServiceProvider"]
    }
  }
}
